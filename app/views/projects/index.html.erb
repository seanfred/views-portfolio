<h1>Projects</h1>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Technologies Used</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @projects.each do |project| %>
  <tr id="<%= dom_id(project) %>">
    <td><%= project.name %></td>
    <td>
      <%= project.technologies_used %>
    </td>
    <td><%= link_to 'Show', project, class: "btn" %></td>
  </tr>
<% end %>
</table>

